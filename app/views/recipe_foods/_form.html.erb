<div class="flex justify-center mt-48 mb-48 container mx-auto">
  <div class="w-3/5 bg-white shadow-lg pb-10 px-10 pt-5">
    <h1>Add new Recipe food</h1><br>
    
    <%= form_with model: @recipe_foods, url: recipe_recipe_foods_path do |form| %>
      <p>
        <%= form.label :quantity, class: "foodFormLabel" %> <br>
        <%= form.number_field :quantity, class: 'py-2 px-4 mt-3 border w-half focus:outline-orange-400' %>
      </p>

      <p>
        <%= form.label :food_id, class: "foodFormLabel" %> <br>
        <%= form.select :food_id, Food.all.collect {|food| [food.name, food.id]}, include_blanck: true %>
      </p>      
      <p>
        <%= form.submit 'Submit', class: "btn mt-3" %>
      </p>
    <% end %>
  </div>
</div>
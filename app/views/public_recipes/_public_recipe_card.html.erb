<div class="wrapper">
  <div class="">
    <div class="">
      <div>
        <h3>
          <%= link_to recipe.name, recipe_path(recipe.id, user_id: recipe.user.id), class: "card-title" %>
        </h3>
        <h5>By: <%= recipe.user.name %>
        </h5>
      </div>
      <div>
        <% if recipe.public %>
        <span class="">Public</span>
        <% else %>
        <span class="">Private</span>
        <% end %>
        <h5 class="">Total foods: <%= recipe.recipe_foods.length %> </h5>
        <% sum = 0 %>
        <h5>Total price : $ <% recipe.recipe_foods.each do |food| %>
        <% sum += food.food.price %>
        <% end %>
        <%= sum %></h5>
      </div>
    </div>
    <div class="">
      <span>Description</span>
      <p class="">
        <%= recipe.description %>
      </p>
      <div class="">
        <p class=""><%= time_ago_in_words(recipe[:created_at]) %></p>
      </div>
    </div>
  </div>
</div>
